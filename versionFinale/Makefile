################################################################################################
#					Fichier créé et édité par Delagrange et Bouvier							   #
################################################################################################

##########################################	Compilateur	########################################## 
CC= gcc				

##########################################	Source	##############################################
SRC= main.c projet_1.c jeu.c tube.c 

########################################## Fichiers objets	 ##########################################

OBJ= $(SRC:.c=.o)
##########################################	Fichiers exec resultants	##########################################
EXEC= prog
all:$(EXEC)

##########################################	Compilation avec regles d'editions de lien ##########################################

$(EXEC): $(OBJ)
	$(CC) $(OBJ) -o $(EXEC)


##########################################	Commande clean pour effacer fichiers objets et executables	##########################################
clean:
	rm $(OBJ) $(EXEC)